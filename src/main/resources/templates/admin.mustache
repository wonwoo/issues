<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Github Dashboard</title>

  <link rel="stylesheet" href="/webjars/bulma/0.7.0/css/bulma.css">
  <link rel="stylesheet" href="/webjars/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="/webjars/timeago.js/3.0.0/dist/timeago.js"></script>

  <style>
    .padding-field {
      padding-bottom:10px;
    }
  </style>

</head>
<body>
<section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <i class="fa fa-github-square" aria-hidden="true"></i>&nbsp;Github Dashboard Admin
      </h1>
    </div>
  </div>
</section>

<section class="section">
  {{#projects}}
  <form method="POST" action="/admin/{{id}}" accept-charset="UTF-8">
    <input name="_method" type="hidden" value="DELETE">
    <div class="field padding-field is-horizontal is-grouped">
      <div class="field-body">
        <div class="field">
          <p class="control is-expanded">
            <input class="input" type="text" value="{{orgName}}" disabled>
          </p>
        </div>
        <div class="field">
          <p class="control is-expanded">
            <input class="input" type="text" value="{{repoName}}" disabled>
          </p>
        </div>
        <div class="control">
          <button class="button is-danger">
            Delete
          </button>
        </div>
      </div>
    </div>
  </form>
  {{/projects}}
</section>

<section class="section">
  <h2 class="title">Add a new project</h2>
  <form action="/admin" method="post">
    <div class="field is-horizontal is-grouped">
      <div class="field-body">
        <div class="field">
          <p class="control is-expanded">
            <input class="input" type="text" name="orgName" placeholder="Organization">
          </p>
        </div>
        <div class="field">
          <p class="control is-expanded">
            <input class="input" type="text" name="repoName" placeholder="Repository">
          </p>
        </div>
        <div class="control">
          <button class="button is-primary">
            Add
          </button>
        </div>
      </div>
    </div>
  </form>
</section>
</body>
</html>